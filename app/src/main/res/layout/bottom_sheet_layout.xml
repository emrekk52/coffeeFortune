<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Result"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="70dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/bottom_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emptyimage"
            app:riv_corner_radius="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:text="You haven't searched yet!"
                android:id="@+id/bottom_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="To search, tap the camera icon on the homepage and then select a picture."
                    android:id="@+id/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp" />

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/prob_view"
android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack" />

    <TextView
        android:visibility="gone"
        android:id="@+id/pictured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pictured"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <GridLayout
        android:id="@+id/gridlayout"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="10"
        android:padding="5dp">



        <TextView
            android:id="@+id/result1"
            android:textColor="@color/colorBlack"
           android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="null\n0%" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/result2"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="null\n0%" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/result3"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="null\n0%" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/result4"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="null\n0%" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/result5"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="null\n0%" />




</GridLayout>


    </LinearLayout>
